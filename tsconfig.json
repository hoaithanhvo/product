{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    // "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./*"]
    },
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/login/index.js",
    "pages/login/index.js",
    "pages/menu/index.js",
    "pages/Phone/index.tsx",
    "components/Body/index.js",
    "components/Body/ChildComponent.js",
    "pages/dong-ho/index.tsx",
    "components/index.js"
  ],
  "exclude": ["node_modules"]
}
